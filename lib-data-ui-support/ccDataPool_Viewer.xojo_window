#tag Events lb_list
	#tag Event
		Sub SelectionChanged()
		  var tmp_table as string = me.SelectedRowValue
		  
		  if lb_meta0.Visible then 
		    FreezeMetaData = False
		    lb_meta0.HeaderAt(1) =  "Value"
		    
		  end if
		  
		  ShowTable tmp_table
		  
		  
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events lb_data
	#tag Event
		Sub SelectionChanged()
		  
		End Sub
	#tag EndEvent
	#tag Event
		Sub MouseMove(x As Integer, y As Integer)
		  var col_no as integer = me.ColumnFromXY(x,y)
		  
		  if col_no < 0 then 
		    RefreshDescription ""
		    return
		    
		  end if
		  
		  var col as clAbstractDataSerie = clAbstractDataSerie(me.ColumnTagAt(col_no))
		  
		  if col = nil then
		    RefreshDescription ""
		    return
		    
		  end if
		  
		  RefreshDescription   col.FullName(true)
		  
		  if not FreezeMetaData then
		    RefreshMetadataFromSerie col
		    
		  end if
		End Sub
	#tag EndEvent
	#tag Event
		Sub MouseExit()
		  RefreshDescription  ""
		  
		  if FreezeMetaData then
		    
		  else
		    lb_meta0.RemoveAllRows
		    
		  end if
		  
		End Sub
	#tag EndEvent
#tag EndEvents
